{
  "manifest_version": 3,
  "name": "SmoothZoom",
  "version": "1.0",
  "description": "Zoom anywhere, on any page, without changing the page layout!",
  "author": "Kristijan RosandiÄ‡",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "inject/content-script.js"
      ],
      "css": [
        "inject/style.css"
      ],
      "all_frames": true
    }
  ]
}