{
  "manifest_version": 3,
  "name": "SmoothZoom",
  "version": "1.0",
  "description": "The smoothest page zoom on the internet.",
  "author": "Kristijan RosandiÄ‡",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "css": [
        "style.css"
      ],
      "all_frames": true
    }
  ]
}